{
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
	"useTabs": true,
	"trailingComma": "es5",
	"semi": false,
	"singleQuote": true,
	"importOrderSeparation": true,
	"importOrder": ["^react-scan$", "^react", "^[a-z]", "^@/", "^[./]"],
	"tailwindFunctions": ["clsx", "cn", "cva"],
	"tailwindStylesheet": "./styles/globals.css",
	"endOfLine": "lf",
	"printWidth": 120
}
